{
    "name": "gan-hattra-api",
    "version": "1.1.0",
    "description": "Gan-Hattra Backend API",
    "main": "server.js",
    "scripts": {
        "lint": "yarn eslint && yarn xo-lint",
        "eslint": "eslint --fix server.js app/**/*.js",
        "xo-lint": "xo --fix --quiet app/**/*.js",
        "format": "prettier-semistandard server.js knexfile.js app/**/*.js scripts/**/*.js seeds/**/*.js migrations/**/*.js",
        "test": "cross-env NODE_ENV=test nyc mocha \"app/**/*.spec.js\" --opts mocha.opts || exit 0",
        "cov-report": "nyc report",
        "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
        "docs": "rimraf docs && jsdoc -c jsdoc.conf",
        "clean-docs": "rimraf docs",
        "clean-report": "rimraf reports && rimraf .nyc_output",
        "migrate": "knex migrate:latest",
        "rethink": "node ./scripts/rethink.migrate.js",
        "rollback": "knex migrate:rollback",
        "seed": "knex seed:run",
        "precommit": "lint-staged"
    },
    "lint-staged": {
      "app/**/*.js": ["yarn lint", "git add"]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rayandrews/gan-hattra-api.git"
    },
    "author": "dataFreaks",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/rayandrews/gan-hattra-api/issues"
    },
    "homepage": "https://github.com/rayandrews/gan-hattra-api#readme",
    "dependencies": {
        "ajv": "^6.4.0",
        "api-error-handler": "^1.0.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.17.2",
        "config": "^1.26.1",
        "connect-redis": "^3.3.0",
        "cors": "^2.8.4",
        "express": "^4.15.3",
        "express-session": "^1.15.3",
        "fs-readdir-recursive": "^1.0.0",
        "http-errors": "^1.6.1",
        "knex": "^0.14.6",
        "lodash": "^4.17.4",
        "method-override": "^2.3.9",
        "mysql": "^2.13.0",
        "passport": "^0.4.0",
        "passport-local": "^1.0.0",
        "redis": "^2.7.1",
        "rethinkdb": "^2.3.3",
        "socket.io": "^2.0.4",
        "uuid": "^3.1.0",
        "winston": "^2.3.1"
    },
    "devDependencies": {
        "chai": "^4.0.2",
        "chai-as-promised": "^7.0.0",
        "chai-http": "^4.0.0",
        "codecov": "^3.0.0",
        "cross-env": "^5.1.4",
        "eslint": "^4.19.1",
        "eslint-config-prettier": "^2.9.0",
        "eslint-config-standard": "^11.0.0",
        "eslint-plugin-import": "^2.11.0",
        "eslint-plugin-mocha": "^5.0.0",
        "eslint-plugin-node": "^6.0.1",
        "eslint-plugin-prettier": "^2.6.0",
        "eslint-plugin-promise": "^3.7.0",
        "eslint-plugin-standard": "^3.0.1",
        "husky": "^0.14.3",
        "jsdoc": "^3.4.3",
        "jsdoc-route-plugin": "^0.1.0",
        "lint-staged": "^7.0.5",
        "mocha": "^5.1.1",
        "mochawesome": "^3.0.2",
        "nodemon": "^1.11.0",
        "nyc": "^11.7.1",
        "prettier": "^1.12.1",
        "prettier-semistandard": "^0.1.1",
        "rimraf": "^2.6.1",
        "sinon": "^4.5.0",
        "sinon-chai": "^3.0.0",
        "sqlite3": "^4.0.0",
        "touch": "^3.1.0",
        "xo": "^0.20.3"
    },
    "semistandard": {
        "env": {
            "mocha": true,
            "node": true
        },
        "ignore": [
            "node_modules"
        ]
    },
    "nyc": {
        "include": [
            "app/**/*.js"
        ],
        "exclude": [
            "**/*.spec.js",
            "**/migrations/**",
            "**/seeder/**",
            "**/seeds/**",
            "**/config/**",
            "**/coverage/**",
            "**/test/**",
            "test{,-*}.js",
            "**/*.test.js",
            "**/__tests__/**",
            "**/node_modules/**"
        ],
        "reporter": [
            "lcovonly",
            "html",
            "text-summary"
        ],
        "cache": true,
        "all": true,
        "report-dir": "./reports/coverage"
    },
    "xo": {
        "semicolon": true,
        "space": true,
        "prettier": true,
        "extends": [
            "standard"
        ],
        "plugins": [
            "mocha"
        ],
        "rules": {
            "semi": [
                2,
                "always"
            ],
            "no-extra-semi": 2,
            "prettier/prettier": "error",
            "mocha/no-exclusive-tests": "error",
            "camelcase": [
                2,
                {
                    "properties": "never"
                }
            ]
        },
        "ignores": [
            "docs/**",
            "dumo/**",
            "etc/**",
            "migrations/**",
            "scripts/**",
            "seeds/**"
        ],
        "envs": [
            "node",
            "mocha"
        ]
    }
}
